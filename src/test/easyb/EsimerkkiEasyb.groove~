/**

 * A simple scenario

 */

scenario "testaamme ebin softamme easyb ominaisuutta", {

    given "a new account",{

        System.out.println("Given");

    }



    when "an initial deposit is made", {

        amount = 100

    }



    then "the balance should be equal to the amount deposited", {

        amount.shouldBe amount

    }

}
